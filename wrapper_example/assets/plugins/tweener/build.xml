<project name="seanmport2007" default="compile">
    <property name="mxmlc" location="/opt/flex_sdk_2/bin/mxmlc" />
    <property name="dest.dir" value="deploy" />       
    
   <target name="init">
      <!-- <delete dir="${dest.dir}" />   -->
      <!-- <mkdir dir="${dest.dir}" /> -->
   </target>

   <target name="compile" depends="init">
       <exec executable="${mxmlc}">
           	<arg line="-output=tweener.swf"/>
           	<arg line="-debug=false"/>
			<arg line="-verbose-stacktraces=false"/>
			<arg line="-optimize=true"/>
			<arg line="TweenerPlugin.as"/>
	   </exec>
   </target>
</project>

